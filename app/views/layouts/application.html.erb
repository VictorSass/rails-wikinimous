  </head>

  <body>
    <div class="navbar">
      <p><%= link_to "Wikinimous", articles_path, class: "link-add" %></p>
      <p><%= link_to "New article", new_article_path, class: "link-add" %></p>
    </div>
    <%= yield %>
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
  </body>
</html>
